<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"

    xmlns:ads="http://schemas.android.com/apk/res-auto"

    android:layout_height="wrap_content" tools:context=".PrimerActivity"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="false"
        android:weightSum="1"
        android:background="#81c1ccd9"
        android:id="@+id/linearLayout"
        android:baselineAligned="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:clickable="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_142sdp">

            <Button
                android:id="@+id/button7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/bottons"
                android:onClick="IrHome"
                android:text="AtrÃ¡s" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="@dimen/_173sdp"
                android:layout_height="@dimen/_127sdp"

                android:layout_gravity="center"
                android:visibility="visible"
                tools:layout_editor_absoluteX="@dimen/_106sdp"
                tools:layout_editor_absoluteY="@dimen/_16sdp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="@dimen/_277sdp"
                android:layout_height="@dimen/_25sdp"
                android:progress="60"
                tools:layout_editor_absoluteX="@dimen/_54sdp"
                tools:layout_editor_absoluteY="@dimen/_275sdp"
                android:layout_below="@+id/linearLayout2"
                android:layout_centerHorizontal="true" />


            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rating="4.25"
                tools:layout_editor_absoluteX="@dimen/_54sdp"
                tools:layout_editor_absoluteY="@dimen/_354sdp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/_17sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_86sdp"
                android:layout_above="@+id/test1"
                android:layout_alignParentStart="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/_51sdp"
                android:orientation="horizontal"
                android:id="@+id/linearLayout2"
                android:layout_alignParentLeft="true">

                <TextView
                    android:id="@+id/miNombreId"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_63sdp"
                    android:gravity="center_vertical|center_horizontal"
                    android:scrollbars="vertical"
                    android:text="Nombre de usuario"
                    android:textIsSelectable="false"
                    android:textSize="@dimen/_16sdp"
                    android:textStyle="bold" />

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
